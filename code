#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Функция для преобразования числа в строку в зависимости от правила
char* convertNumber(const char* number) {
    static char result[256];
    strcpy(result, ""); // Очищаем результат

    int length = strlen(number);
    for (int i = 0; i < length; ++i) {
        switch (number[i]) {
            case '2':
                strcat(result, "два ");
                break;
            case '4':
                strcat(result, "четыре ");
                break;
            case '6':
                strcat(result, "шесть ");
                break;
            case '8':
                strcat(result, "восемь ");
                break;
            case '0':
                strcat(result, "ноль ");
                break;
            default:
                // Добавляем нечетную цифру без изменений
                strncat(result, &number[i], 1);
                strcat(result, " ");
                break;
        }
    }
    return result;
}

// Главная функция
int main() {
    FILE *file = fopen("input.txt", "r"); // Открыть файл для чтения
    if (file == NULL) {
        perror("Failed to open file");
        return 1;
    }

    char word[100];
    while (fscanf(file, "%s", word) != EOF) { // Читать лексемы до конца файла
        printf("%s -> %s\n", word, convertNumber(word));
    }

    fclose(file); // Закрыть файл
    return 0;
}
